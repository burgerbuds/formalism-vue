{
    "name": "formalism-vue",
    "scripts": {
        "start": "npm run webpack-dev-server",
        "watch": "npm run webpack-watch",
        "webpack-dev-server": "NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --quiet --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "webpack-watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js --watch",
        "build": "NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "fix-code": "eslint --fix 'src/scripts/**/*.{vue,js,jsx,mjs}'",
        "fix-styles": "stylelint --fix 'src/styles/**/*.{css,sass,scss}'"
    },
    "dependencies": {
        "core-js": "^3.1.3",
        "deepmerge": "^3.2.0",
        "formalism": "^0.1.26",
        "lodash": "^4.17.11",
        "vue": "^2.6.10",
        "vue-styled-components": "^1.4.5"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.3",
        "eslint": "^5.16.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-compat": "^3.1.1",
        "imagemin-webpack-plugin": "^2.4.2",
        "laravel-mix": "^4.0.16",
        "laravel-mix-imagemin": "^1.0.0",
        "laravel-mix-polyfill": "^1.0.2",
        "laravel-mix-svg-sprite": "^1.0.0",
        "sass": "^1.21.0",
        "sass-loader": "^7.1.0",
        "stylelint": "^10.1.0",
        "stylelint-no-unsupported-browser-features": "^3.0.2",
        "stylelint-webpack-plugin": "^0.10.5",
        "vue-template-compiler": "^2.6.10",
        "@vue/cli-plugin-babel": "^3.8.0",
        "@vue/cli-plugin-eslint": "^3.8.0",
        "@vue/cli-service": "^3.8.0",
        "eslint-plugin-vue": "^5.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "Firefox ESR",
        "not ie 10",
        "not op_mini all",
        "not op_mob 12.1",
        "not baidu 7.12",
        "not ie_mob 10",
        "not and_uc 11.8"
    ],
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "plugins": [
            "compat"
        ],
        "rules": {
            "compat/compat": "warn",
            "no-console": "off",
            "no-unused-vars": "warn",
            "vue/no-unused-components": "warn"
        }
    },
    "stylelint": {
        "plugins": [
            "stylelint-no-unsupported-browser-features"
        ],
        "defaultSeverity": "warning",
        "rules": {
            "plugin/no-unsupported-browser-features": [
                true,
                {
                    "ignore": [
                        "flexbox",
                        "calc",
                        "will-change",
                        "css-filters",
                        "outline",
                        "viewport-units",
                        "css-appearance",
                        "css-gradients",
                        "css-textshadow",
                        "css-initial-value",
                        "font-feature",
                        "kerning-pairs-ligatures",
                        "fontface"
                    ]
                }
            ],
            "string-quotes": "single",
            "no-eol-whitespace": true,
            "indentation": 4,
            "max-empty-lines": 2,
            "property-case": "lower",
            "font-family-no-missing-generic-family-keyword": true,
            "function-parentheses-space-inside": "never-single-line",
            "function-comma-space-before": "never-single-line",
            "property-no-vendor-prefix": true,
            "function-linear-gradient-no-nonstandard-direction": true,
            "no-extra-semicolons": true,
            "no-duplicate-at-import-rules": true
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "useTabs": false,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    }
}
